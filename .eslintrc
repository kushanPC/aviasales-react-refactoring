{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb",
        "react-app",
        "airbnb/hooks"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
    ],
    "rules": {
            "max-classes-per-file": ["error", 3]
    }
}